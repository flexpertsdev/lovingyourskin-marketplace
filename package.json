{
  "name": "lovingyourskin",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{ts,tsx,css}\"",
    "firebase:emulators": "firebase emulators:start",
    "firebase:deploy": "firebase deploy",
    "firebase:deploy:functions": "firebase deploy --only functions",
    "firebase:deploy:hosting": "firebase deploy --only hosting",
    "migrate:firebase": "node scripts/migrate-to-firebase.js",
    "migrate:fix-brands": "node scripts/fix-brands-migration.js",
    "migrate:test": "firebase emulators:exec --only firestore 'npm run migrate:firebase'",
    "import:products": "node scripts/import-products-to-firestore.js",
    "import:products:admin": "node scripts/import-products-admin.js",
    "migrate:images": "node scripts/migrate-product-images.js",
    "migrate:images:admin": "GOOGLE_APPLICATION_CREDENTIALS=./firebase-admin-key.json node scripts/migrate-product-images-admin.js",
    "add:preorder-field": "node scripts/add-preorder-field.js",
    "add:preorder-field:admin": "node scripts/add-preorder-field-admin.js"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@hookform/resolvers": "^5.1.1",
    "@stripe/stripe-js": "^7.8.0",
    "@tanstack/react-query": "^5.81.2",
    "axios": "^1.10.0",
    "browser-image-compression": "^2.0.2",
    "clsx": "^2.1.1",
    "csv-parse": "^6.1.0",
    "date-fns": "^4.1.0",
    "firebase": "^11.10.0",
    "firebase-admin": "^13.4.0",
    "i18next": "^25.2.1",
    "lucide-react": "^0.536.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-hook-form": "^7.58.1",
    "react-hot-toast": "^2.5.2",
    "react-i18next": "^15.5.3",
    "react-router-dom": "^7.6.2",
    "stripe": "^18.4.0",
    "tailwind-merge": "^3.3.1",
    "uuid": "^11.1.0",
    "zod": "^3.25.67",
    "zustand": "^5.0.5"
  },
  "devDependencies": {
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@typescript-eslint/eslint-plugin": "^8.34.1",
    "@typescript-eslint/parser": "^8.34.1",
    "@vitejs/plugin-react": "^4.5.2",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.29.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "postcss": "^8.5.6",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.13",
    "tailwindcss": "^3.4.17",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "vite": "^6.3.5"
  }
}
